{
  "manifest_version": 3,
  "name": "Highlight Extension",
  "author": "Justin Arinze",
  "homepage_url": "https://yourwebsite.com",
  "version": "1.0.0",
  "description": "A smart browser extension that lets you highlight any word on any webpage to instantly see its meaning, save it for later, and sync your vocabulary across devices.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "icons/16.png",
      "48": "icons/57.png",
      "128": "icons/128.png"
    }
  },
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content/content-script.js"
      ],
      "css": [
        "content/content-style.css"
      ],
      "run_at": "document_end"
    }
  ],
  "options_page": "src/options/index.html",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/57.png",
    "128": "icons/128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "content/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "your-extension@example.com"
    }
  }
}